body
  display flex
  margin 0

#react-app
  margin 50px auto
  width 1000px

.clan
  display flex
  justify-content flex-start
  border 1px solid #8f8f8f
  padding 10px
  background-color #f9f9f9
  border-radius 10px

  .info
    width: 60%

  .desc
    width 200px

  .n
    position absolute
    left 130px
    top 55px
    color white
    font-weight bold
    text-shadow 2px 2px 4px #000000
    font-size 36px

  h1
    color #fff7c2
    margin-top 0
    text-shadow 2px 2px 4px #000000

  ul
    list-style none
    margin 0
    padding 0

  p
    font-size 11px

  div
    margin 5px
    padding 5px